<%= javascript_include_tag "style_coffe" %>
<div id="main-content" class="clearfix">
	<%= render :partial => "final_projects/breadcrumbs/show_history" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Final Project
				<small>
					<i class="icon-double-angle-right"></i>
					<%= @final_project.title %>
				</small>
			</h1>
		</div><!--/.page-header-->

		<div class="row-fluid">
			<!--PAGE CONTENT BEGINS HERE-->
      <!-- bootstrap flash -->
			<%= bootstrap_flash %>
      <!-- end bootstrap flash -->
			<div class="row-fluid">
				<div class="span12">
					<div class="tabbable">
						<ul class="nav nav-tabs" id="myTab">
							<li class="active">
								<a data-toggle="tab" href="#profile">
                  <i class="red icon-bar-chart bigger-110"></i>
									Activities
								</a>
							</li>
							<li>
								<a data-toggle="tab" href="#home">
									<i class="green icon-calendar bigger-110"></i>
									History
								</a>
							</li>
						</ul>

						<div class="tab-content">
							<div id="profile" class="tab-pane in active">
                <div class="row-fluid">
                  <div class="span12">
                    <%= content_tag :div, "", id: "graph", data: {activity: @activities_graph} %>
                  </div>
                </div>
							</div>
							<div id="home" class="tab-pane">
								<div class="dialogs">
                  <div class="row-fluid">
      							<div class="span12 paginator">
      								<%= paginate @activities, :remote => true, :params => { :controller => 'final_projects', :action => 'activities', :id => @final_project.id} %>
      							</div><!--/span-->
                  </div>
                  <div class="row-fluid">
                    <div class="span12" id="activity">
                      <%= render_activities(@activities) %>
                    </div>
                  </div>
                  <div class="row-fluid">
      							<div class="span12 paginator">
      								<%= paginate @activities, :remote => true, :params => { :controller => 'final_projects', :action => 'activities', :id => @final_project.id} %>
      							</div><!--/span-->
                  </div>
								</div>
							</div>
						</div>
					</div>
				</div><!--/span-->
			</div><!--/row-->
			<!--PAGE CONTENT ENDS HERE-->
		</div><!--/row-->
	</div><!--/#page-content-->
</div><!--/#main-content-->