<div id="main-content" class="clearfix">
	<%= render :partial => "final_projects/breadcrumbs/edit" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Edit Final Project
				<small>
					<i class="icon-double-angle-right"></i>
					<%= @final_project.title %>
				</small>
			</h1>
		</div><!--/.page-header-->
    <!-- bootstrap flash -->
		<%= bootstrap_flash %>
    <!-- end bootstrap flash -->
    <%= simple_form_for @final_project, :validate => true, :html => {:class => "client_side_validation",:multipart => true} do |f| %>
      <%= render :partial => "shared/error_messages", :locals => {:context => @final_project} %>
      <div class="row-fluid">
        <%= f.input :title, :label => "Judul Proposal Tugas Akhir", :input_html => {:class => "span12"} %>
        <%= f.input :description, :as => :ckeditor, :label => "Deskripsi",:input_html => {:ckeditor => {:customConfig => '/assets/ckeditor/myconfig.js'}} %>
        <%= hidden_field_tag :redirect_link, params[:redirect_link] || request.headers["Referer"] %>
      </div><!-- end row -->
      <div class="row-fluid">
        <div class="span12"></div>
      </div>
      <div class="row-fluid">
    		<div class="form-actions">
    			<button class="btn btn-success" type="submit">
    				<i class="icon-ok bigger-110"></i>
    				  Update Proposal
    			</button>
    		</div>
      </div><!--/row-->
    <% end %>
	</div><!--/#page-content-->
</div><!--/#main-content-->