<div id="main-content" class="clearfix">
	<%= render :partial => "final_projects/breadcrumbs/show" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Final Project
				<small>
					<i class="icon-double-angle-right"></i>
					<%= @final_project.title %>
				</small>
			</h1>
		</div><!--/.page-header-->

		<div class="row-fluid">
			<!--PAGE CONTENT BEGINS HERE-->
      <!-- bootstrap flash -->
			<%= bootstrap_flash %>
      <!-- end bootstrap flash -->
      <div class="row-fluid item_topic">
        <div class="span12">
          <div class="row-fluid item_header">
            <div class="span12">
              <dl class="dl-horizontal">
                <dt>Mahasiswa : </dt>
                <dd><%= link_to @final_project.user.username, user_profile_path(@final_project.user) %></dd>
                <dt>Pembimbing 1 : </dt>
                <dd><%= link_to @final_project.advisor_1.username, user_profile_path(@final_project.advisor_1) %></dd>
                <dt>Pembimbing 2 : </dt>
                <dd><%= @final_project.advisor_2.present? ? (link_to @final_project.advisor_2.username, user_profile_path(@final_project.advisor_2)) : @final_project.advisor_2_name %></dd>
              </dl>
            </div>
          </div><!-- end row -->
          <br>
          <div class="row-fluid">
            <%= raw @final_project.description %>
          </div><!-- end row -->
        </div>
      </div><!-- end row -->
      <% if can? :destroy, @final_project %>
        <div class="hr hr32 hr-dotted"></div>
        <div class="row-fluid">
          <div class="span10">
        		<blockquote>
        			<p>Hapus Final Project ini ? Final Project akan terhapus permanen dan tidak dapat dikembalikan</p>
        		</blockquote>
          </div>
          <div class="span2">
            <%= link_to "Hapus", final_project_path(@final_project), :method => :delete, :confirm => "Apakah anda yakin ?", :class => "btn btn-danger" %>
          </div>
        </div>
      <% end %>
			<!--PAGE CONTENT ENDS HERE-->
		</div><!--/row-->
	</div><!--/#page-content-->
</div><!--/#main-content-->
<% if can? :update, @final_project %>
  <%= render :partial => "final_projects/issue/config_show_button", :locals => {:final_project => @final_project} %>
<% end %>