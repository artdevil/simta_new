<div id="main-content" class="clearfix">
	<%= render :partial => "topics/breadcrumbs/edit" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Edit Topic
				<small>
					<i class="icon-double-angle-right"></i>
					<%= @topic.title %>
				</small>
			</h1>
		</div><!--/.page-header-->
    <!-- bootstrap flash -->
		<%= bootstrap_flash %>
    <!-- end bootstrap flash -->
    <%= render 'topics/partials/form' %>
    <% if can? :destroy, @topic %>
      <div class="hr hr32 hr-dotted"></div>
      <div class="row-fluid">
        <div class="span10">
      		<blockquote>
      			<p>Hapus Topik ini ? Topik akan terhapus permanen dan tidak dapat dikembalikan</p>
      		</blockquote>
        </div>
        <div class="span2">
          <%= link_to "Hapus Topik", topic_path(@topic), :method => :delete, :confirm => "Apakah anda yakin ?", :class => "btn btn-danger" %>
        </div>
      </div>
    <% end %>
	</div><!--/#page-content-->
</div><!--/#main-content-->