<%= simple_nested_form_for @topic_tag, :url => topic_tags_path, :validate => true, :html => {:method => "post", :class => "client_side_validation",:multipart => true, :id => "tag_init_show"} do |f| %>
  <div class="row-fluid">
		<blockquote>
			<p>Pastikan Anda Yakin Untuk Mengambil Topik Tugas Akhir Ini. Anda Hanya Bisa Mengajukan Satu Topik Tugas Akhir</p>
			<small style="color: red">
				Penting
				<cite title="Source Title">Harap Dibaca</cite>
			</small>
		</blockquote>
  </div>
  <%= render :partial => "shared/error_messages", :locals => {:context => @topic_tag} %>
  <div class="row-fluid">
    <div class="span12">
      <%= f.input :title_recommended, :label => "Judul Rekomendasi", :input_html => {:value => @topic.title} %>
      <%= f.input :topic_id, :as => :hidden %>
      <%= f.input :description_recommended, :as => :ckeditor, :label => "Deskripsi",:input_html => {:ckeditor => {:customConfig => '/assets/ckeditor/myconfig.js'}} %>
    </div>
  </div><!-- end row -->
  <%= f.simple_fields_for :attachments do |n| %>
    <div class="row-fluid">
      <div class="span6"><%= n.input :file, :input_html => {:class => "upload_file"} %></div>
      <div class="span6"><%= n.link_to_remove "remove" %></div>
    </div>
  <% end %>
  <p><%= f.link_to_add "Add a attachment", :attachments %></p>
  <div class="row-fluid">
    <div class="span12"></div>
  </div>
  <div class="row-fluid">
		<div class="form-actions">
			<button class="btn btn-info" type="submit">
				<i class="icon-ok bigger-110"></i>
				Submit
			</button>
		</div>
  </div><!--/row-->
<% end %>