<div id="main-content" class="clearfix">
	<%= render :partial => "topics/breadcrumbs/index" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Topik Tugas Akhir
				<small>
					<i class="icon-double-angle-right"></i>
					Hasil Pencarian
				</small>
			</h1>
		</div><!--/.page-header-->
		<div class="row-fluid">
      <!-- bootstrap flash -->
			<%= bootstrap_flash %>
      <!-- end bootstrap flash -->
			<!--PAGE CONTENT BEGINS HERE-->
      <div class="row-fluid">
        <div class="span12" id="filter_search_form" style="display: <%= 'none' unless params[:search_key].present? or params[:keyword].present? %>;">
					<div class="well">
						<h3 class="red smaller lighter">Filter Pencarian</h3>
						<p>Gunakan tools ini untuk mencari topik TA dengan lebih mudah</p>
            <hr>
            <%= form_tag("/topics", :method => "get", :class => "form-search") do %>
							<input type="text" class="input-medium search-query span10" name="search_key" value="<%= params[:search_key] %>"/>
							<button class="btn btn-purple btn-small" type="submit">
								Search
								<i class="icon-search icon-on-right bigger-110"></i>
							</button>
            <% end %>
            <hr>
            <p>Cari berdasarkan Tag</p>
            <div class="row-fluid">
              <% @topic_tag.each do |topic_tag| %>
                <div class="span3">
                  <% topic_tag.each do |f| %>
                    <% if f.present? %>
                      <%= link_to f, topics_path(:keyword => f.name) %><br>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
					</div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12">
          <% @topics.each do |f| %>
            <%= render :partial => 'topics/partials/topic_item', :locals => {:topic => f} %>
          <% end %>
        </div>
      </div><!-- end row fluid-->
      <div class="row-fluid">
        <div class="span12" style="text-align: center;">
          <div class="pagination">
            <%= paginate @topics %>
          </div>
        </div>
      </div>
			<!--PAGE CONTENT ENDS HERE-->
		</div><!--/row-->
	</div><!--/#page-content-->
</div><!--/#main-content-->
<%= render :partial => "topics/partials/config_index_button" %>