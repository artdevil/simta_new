<div id="main-content" class="clearfix">
	<%= render :partial => "todo_proposals/breadcrumbs/index" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Todos Proposals
				<small>
					<i class="icon-double-angle-right"></i>
					Todos and progress
				</small>
			</h1>
		</div><!--/.page-header-->

		<div class="row-fluid">
			<!--PAGE CONTENT BEGINS HERE-->
      <!-- bootstrap flash -->
			<%= bootstrap_flash %>
      <!-- end bootstrap flash -->
      <div class="row-fluid">
        <div class="span4">
					<%= render :partial => "todo_proposals/partials/progress", :locals => {:proposal => @proposal } %>
        </div>
        <div class="span8">
					<div class="row-fluid">
						<div class="span12">
							<div class="tabbable">
								<ul class="nav nav-tabs" id="myTab">
									<li class="active">
                    <%= link_to "/todo_proposals/#{@proposal.user.slug}/open", :remote => true, :data => {:toggle => "tab", :target => "#open"} do %>
										  Open
                      <span class="badge badge-success" id="open_count"><%= @todo_proposals_open.size %></span>
                    <% end %>
									</li>

									<li>
                    <%= link_to "/todo_proposals/#{@proposal.user.slug}/close",:remote => true, :data => {:toggle => "tab", :target => "#close"} do %>
										  Close
										  <span class="badge badge-important" id="close_count"><%= @todo_proposals_close.size %></span>
                    <% end %>
									</li>
								</ul>

								<div class="tab-content">
									<div id="open" class="tab-pane in active">
									  <%= render :partial => "todo_proposals/partials/open_issue", :locals => {:open_issue => @todo_proposals_open, :proposal => @proposal } %>
									</div>
									<div id="close" class="tab-pane">
									</div>
								</div>
							</div>
						</div><!--/span-->
					</div><!--/row-->
        </div><!-- end span12 -->
      </div><!-- end row -->
			<!--PAGE CONTENT ENDS HERE-->
		</div><!--/row-->
	</div><!--/#page-content-->
  <% unless @proposal.finished? %>
    <%= render :partial => "todo_proposals/partials/config_button" %>
  <% end %>
</div><!--/#main-content-->