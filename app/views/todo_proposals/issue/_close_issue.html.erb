<div class="comments">
  <% close_issue.each do |f| %>
  	<div class="itemdiv commentdiv close_issue">
  		<div class="user">
  			<%= image_tag f.user.avatar.thumb.url %>
  		</div>
  		<div class="body">
  			<div class="name">
  				<%= link_to f.user.username, user_profile_path(f.user) %>
  			</div>
  			<div class="time">
  				<i class="icon-time"></i>
  				<span class="timeago blue" title="<%= f.created_at.strftime('%Y-%m-%dT%H:%M:%IZ')%>"></span>
  			</div>
  			<div class="text">
  				<i class="icon-quote-left"></i>
  				<%= link_to f.title, "/todo_proposals/issue/#{f.proposal.user.slug}/#{f.slug}" %>
  			</div>
  		</div>
  	</div>
  <% end %>
</div>