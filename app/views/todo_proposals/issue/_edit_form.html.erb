<%= simple_nested_form_for @todo_proposal, :url => "/todo_proposals/#{@todo_proposal.slug}/issue/#{@proposal.user.slug}/update", :validate => true, :html => {:method => "PUT", :class => "client_side_validation",:multipart => true} do |f| %>
  <%= render :partial => "shared/error_messages", :locals => {:context => @todo_proposal} %>
  <div class="row-fluid">
    <%= f.input :title, :label => "Judul", :input_html => {:class => "span12"} %>
    <%= f.input :message, :as => :ckeditor, :label => "Pesan",:input_html => {:ckeditor => {:customConfig => '/assets/ckeditor/myconfig.js'}} %>
    <%= f.input :proposal_id, :as => :hidden %>
  </div><!-- end row -->
  <%= f.simple_fields_for :attachments do |n| %>
    <%= render :partial => "shared/file_upload", :locals => {:n => n} %>
  <% end %>
  <p><%= f.link_to_add "Add a attachment", :attachments %></p>
  <div class="row-fluid">
    <div class="span12"></div>
  </div>
  <div class="row-fluid">
		<div class="form-actions">
			<button class="btn btn-success" type="submit">
				<i class="icon-ok bigger-110"></i>
				Save
			</button>
		</div>
  </div><!--/row-->
<% end %>