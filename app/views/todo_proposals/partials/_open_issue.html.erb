<div class="comments">
  <% open_issue.each do |f| %>
  	<div class="itemdiv commentdiv">
  		<div class="user">
  			<%= image_tag f.user.avatar.thumb.url %>
  		</div>

  		<div class="body">
  			<div class="name">
  				<a href="#"><%= f.user.username %></a>
  			</div>

  			<div class="time">
  				<i class="icon-time"></i>
  				<span class="timeago blue" title="<%= f.created_at.strftime('%Y-%m-%dT%H:%M:%IZ')%>"></span>
  			</div>

  			<div class="text">
  				<i class="icon-quote-left"></i>
  				<%= f.title %>
  			</div>
  		</div>
  		<div class="tools">
        <%= link_to todo_proposal_path(f), :class => "btn btn-minier btn-info" do %>
          <i class="icon-only icon-eye-open"></i>
        <% end %>
  			<a href="#" class="btn btn-minier btn-danger">
  				<i class="icon-only icon-trash"></i>
  			</a>
  		</div>
  	</div>
  <% end %>
</div>