<div id="main-content" class="clearfix">
  <%= render :partial => "shared/breadcrumbs" %>
	<div id="page-content" class="clearfix">
		<div class="page-header position-relative">
			<h1>
				Edit News
			</h1>
		</div><!--/.page-header-->
    <!-- bootstrap flash -->
		<%= bootstrap_flash %>
    <!-- end bootstrap flash -->
    <%= render 'news/partials/form' %>
    <% if can? :destroy, @news %>
      <div class="hr hr32 hr-dotted"></div>
      <div class="row-fluid">
        <div class="span10">
      		<blockquote>
      			<p>Hapus Berita ini ? Berita akan terhapus permanen dan tidak dapat dikembalikan</p>
      		</blockquote>
        </div>
        <div class="span2">
          <%= link_to "Hapus Berita", news_path(@news), :method => :delete, :confirm => "Apakah anda yakin ?", :class => "btn btn-danger" %>
        </div>
      </div>
    <% end %>
	</div><!--/#page-content-->
</div><!--/#main-content-->