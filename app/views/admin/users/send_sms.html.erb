<%= semantic_form_for @send_sms, :url => send_sms_action_admin_users_path do |f| %>
  <%= f.inputs :name => "Contact and Message" do %>
    <%= f.input :all_number, :as => :string, :hint => "pisahkan dengan koma" %>
    <%= f.input :message, :as => :text %>
    <%= f.input :from_form, :as => :hidden, :input_html => {:value => true} %>
  <% end %>
  <br>
  <%= f.submit "Send SMS" %>
<% end %>