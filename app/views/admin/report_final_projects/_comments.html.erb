<div class="in_panel_wrap">
  <% comments.each do |f| %>
    <div class="itemdiv">
    	<div class="user">
    		<%= image_tag f.user.avatar.thumb.url %>
    	</div>

    	<div class="body">
    		<div class="time">
    			<i class="icon-time"></i>
    			<span class="timeago blue" title="<%= f.created_at.strftime('%Y-%m-%dT%H:%M:%IZ')%>"></span>
    		</div>

    		<div class="name">
          <%= link_to f.user.username, admin_user_path(f.user) %>
    		</div>
    		<div class="text">
    		  <%= raw f.comment %>
    		</div>
    	</div>
    </div>
  <% end %>
</div>