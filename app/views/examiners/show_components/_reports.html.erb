<div class="row-fluid hidden-phone">
  <div class="span12">
    <div class="widget-box transparent">
    	<div class="widget-header">
    		<h4>Final Project Reports</h4>

    		<span class="widget-toolbar no-border">
    			<a href="#" data-action="collapse">
    				<i class="icon-chevron-up"></i>
    			</a>

    			<a href="#" data-action="close">
    				<i class="icon-remove"></i>
    			</a>
    		</span>
    	</div>

    	<div class="widget-body">
    		<div class="widget-main">
          <div class="row-fluid">
            <div class="span6">
              <h4>pembimbing 1</h4>
        			<div class="row-fluid">
        				<div class="span12">
        					<table id="table_bug_report_<%= current_user.id if final_project.advisor_1 == current_user %>" class="table table-striped table-bordered table-hover">
        						<thead>
        							<tr>
        								<th style="width: 130px;">Date</th>
        								<th>Note</th>
        							</tr>
        						</thead>
        						<tbody>
        							<% reports.advisor_progress(final_project.advisor_1_id).each_with_index do |f, index| %>
                        <%= render :partial => "todo_final_projects/partials/reports_data", :locals => {:report_data => f, :index => index} %>
                      <% end %>
        						</tbody>
        					</table>
        				</div><!--/span-->
        			</div><!--/row-->
            </div><!--span-->
            <div class="span6">
              <% if final_project.advisor_2_id.present? %>
                <div class="clearfix"></div>
                <h4>pembimbing 2</h4>
          			<div class="row-fluid">
          				<div class="span12">
          					<table id="table_bug_report_<%= current_user.id if final_project.advisor_2 == current_user %>" class="table table-striped table-bordered table-hover">
          						<thead>
          							<tr>
          								<th style="width: 130px;">Date</th>
          								<th>Note</th>
          							</tr>
          						</thead>

          						<tbody>
          							<% reports.advisor_progress(final_project.advisor_2_id).each_with_index do |f, index| %>
                          <%= render :partial => "todo_final_projects/partials/reports_data", :locals => {:report_data => f, :index => index} %>
                        <% end %>
          						</tbody>
          					</table>
          				</div><!--/span-->
          			</div><!--/row-->
              <% end %>
            </div><!-- span -->
          </div>
    		</div>
    	</div>
    </div>
    <div id="report_final_project_modal_in"></div>
  </div>
</div>