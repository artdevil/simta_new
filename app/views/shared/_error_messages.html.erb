<div class="row-fluid">
  <div class="span12 alert alert-error">
    <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
    <h4>Please confirm this error : </h4><br>
    <ul>
      <% context.errors.each do |attr, msg| %>
        <li><%= attr %> <%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>