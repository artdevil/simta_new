<%= simple_form_for final_project, :url => update_document_final_project_path(final_project), :method => :put, :remote => true do |f| %>
  <%= link_to "buku tugas akhir", final_project.document_final_project.url unless final_project.document_final_project.blank? %>
  <%= f.input :document_final_project, :input_html => {:class => "upload_file"}, :label => "Buku tugas akhir" %>
  <% if final_project.examiners.unscoped.not_accepted_status.first.status == "revisi" %>
    <%= link_to "buku revisi tugas akhir", final_project.document_revision_final_project.url unless final_project.document_revision_final_project.blank? %>
    <%= f.input :document_revision_final_project, :input_html => {:class => "upload_file"}, :label => "Buku Revisi tugas akhir" %>
  <% end %>
  <%= f.submit 'upload file', :class => "btn btn-success"%>
<% end %>
<script type="text/javascript">
$('.upload_file').ace_file_input({
	no_file:'No File',
	btn_choose:'Choose',
	btn_change:'Change',
	droppable:false,
	onchange:null,
	thumbnail:true, //| true | large
	whitelist: 'png|jpg|jpeg|pdf|JPG'
	//blacklist:'exe|php'
	//onchange:''
	//
});
</script>